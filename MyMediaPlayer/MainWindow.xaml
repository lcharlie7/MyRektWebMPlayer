<Window x:Class="MyMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMediaPlayer"
        mc:Ignorable="d"
        Title="MyRektWebMPlayer" Height="300" Width="300"
        MinWidth="300" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ToolBar>
            <Button x:Name="button1" Content="Play" Click="button1_Click"/>
            <Button x:Name="button2" Content="Pause" Click="button2_Click"/>
            <Button x:Name="button3" Content="Stop" Click="button3_Click"/>
            <Button x:Name="button4" Content="Add Media" Click="button4_Click"/>
        </ToolBar>
        <Label x:Name="label1" Content="" HorizontalAlignment="Left" Margin="0,226,0,0" VerticalAlignment="Top" Width="292" Height="17" Grid.Row="1"/>
        <MediaElement x:Name="mediaElement1" LoadedBehavior="Manual" Stretch="None" Margin="0,5,0,17" Grid.Row="1"/>

    </Grid>
</Window>
